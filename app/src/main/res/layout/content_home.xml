<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HomeActivity"
    tools:showIn="@layout/app_bar_home">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/indicator"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="31dp"
            android:gravity="bottom"
            android:padding="10dip"
            app:centered="true"
            app:fillColor="#df0623"
            app:pageColor="#fff"
            app:snap="false" />

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            tools:ignore="NotSibling" />
    </RelativeLayout>

    <HorizontalScrollView
        android:id="@+id/scrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="137dp"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonAll"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="All"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/buttonLaptops"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="Laptops"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/buttonTshirt"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="T Shirt"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/buttonFemaleDress"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:text="Female Dress"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/buttonMobile"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:text="Mobile Phones"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/buttonShoes"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:text="Shoes"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/buttonSportsTShirts"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:text="Sports Shirts"
                android:textColor="@android:color/white" />
            <Button
                android:id="@+id/buttonGlasses"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:text="Glasses"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/buttonWalletsBagsPurses"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:text="Bags"
                android:textColor="@android:color/white" />
            <Button
                android:id="@+id/buttonHeadPhonesHandFree"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:text="Accessories"
                android:textColor="@android:color/white" />
            <Button
                android:id="@+id/buttonWatches"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:text="Watches"
                android:textColor="@android:color/white" />
            <Button
                android:id="@+id/buttonHatsCaps"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:text="Hats Caps"
                android:textColor="@android:color/white" />
            <Button
                android:id="@+id/buttonSweathers"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:text="Sweater"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </HorizontalScrollView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/scrl">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/scrl"
            android:orientation="horizontal">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_menu"
                android:layout_width="170dp"
                android:layout_height="3040dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/scrl"
                android:layout_marginTop="10dp"
                android:isScrollContainer="false"
                android:nestedScrollingEnabled="false"
                android:scrollbars="none">

            </android.support.v7.widget.RecyclerView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_menu1"
                android:layout_width="180dp"
                android:layout_height="3040dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:isScrollContainer="true"
                android:scrollbars="none" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>